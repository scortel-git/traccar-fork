<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="changelog-5.9.1-add_start_fishing_trip_table">

    <changeSet id="create_elb_start_fishing_trip_table" author="n.vlahovski">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="elb_start_fishing_trip"/>
            </not>
        </preConditions>

        <createTable tableName="elb_start_fishing_trip">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="deviceid" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="positionid" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="servertime" type="TIMESTAMP" defaultValueComputed="LOCALTIMESTAMP"/>
            <column name="devicetime" type="TIMESTAMP" defaultValueComputed="LOCALTIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="fixtime" type="TIMESTAMP" defaultValueComputed="LOCALTIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="valid" type="BOOLEAN" defaultValue="TRUE" >
                <constraints nullable="false"/>
            </column>
            <column name="outdated" type="BOOLEAN" defaultValue="FALSE" >
                <constraints nullable="false"/>
            </column>
            <column name="departureportid" type="INTEGER"/>
            <column name="departureportcode" type="VARCHAR(128)"/>
            <column name="latitude" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="altitude" type="DOUBLE PRECISION"/>
            <column name="speed" type="DOUBLE PRECISION"/>
            <column name="course" type="DOUBLE PRECISION"/>
            <column name="creationdate" type="TIMESTAMP" defaultValueComputed="LOCALTIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="tripnumber" type="VARCHAR(128)" >
                <constraints nullable="false"/>
            </column>
            <column name="attributes" type="VARCHAR"/>
            <column name="fishes" type="VARCHAR"/>
            <column name="network" type="VARCHAR(4000)"/>
            <column name="geofenceids" type="VARCHAR(4000)"/>
            <column name="fishids" type="VARCHAR(4000)"/>
            <column name="protocol" type="VARCHAR(128)"/>
            <column name="captainid" type="BIGINT" defaultValue="-1"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="elb_start_fishing_trip"
                                 baseColumnNames="deviceid"
                                 constraintName="fk_elb_start_fishing_trip_device_id"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="tc_devices"/>

        <addForeignKeyConstraint baseTableName="elb_start_fishing_trip"
                                 baseColumnNames="positionid"
                                 constraintName="fk_elb_start_fishing_trip_positions_id"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="tc_positions"/>

        <createIndex tableName="elb_start_fishing_trip" indexName="idx_elb_start_fishing_trip_deviceid">
            <column name="id" />
            <column name="deviceid" />
            <column name="fixtime" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
