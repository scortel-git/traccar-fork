<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="changelog-5.9.1-add_end_fishing_trip_table">

    <changeSet id="create_elb_end_fishing_trip_table" author="n.vlahovski">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="elb_end_fishing_trip"/>
            </not>
        </preConditions>

        <createTable tableName="elb_end_fishing_trip">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="deviceid" type="INTEGER" >
                <constraints nullable="false"/>
            </column>
            <column name="positionid" type="INTEGER"/>
            <column name="servertime" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="devicetime" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="fixtime" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="valid" type="BOOLEAN" >
                <constraints nullable="false"/>
            </column>
            <column name="outdated" type="BOOLEAN" defaultValue="FALSE" >
                <constraints nullable="false"/>
            </column>
            <column name="estimatedarrivetime" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="landingportid" type="INTEGER" >
                <constraints nullable="false"/>
            </column>
            <column name="departureportid" type="INTEGER" >
                <constraints nullable="false"/>
            </column>
            <column name="endfishingtriptime" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="altitude" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="speed" type="DOUBLE PRECISION"/>
            <column name="course" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="creationdate" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false"/>
            </column>
            <column name="tripnumber" type="VARCHAR(128)" >
                <constraints nullable="false"/>
            </column>
            <column name="attributes" type="VARCHAR"/>
            <column name="network" type="VARCHAR(4000)"/>
            <column name="geofenceids" type="VARCHAR(4000)"/>
            <column name="protocol" type="VARCHAR(128)"/>
            <column name="uniquenumber" type="VARCHAR(128)" >
                <constraints nullable="false"/>
            </column>
            <column name="captainid" type="BIGINT" defaultValue="-1"/>


        </createTable>
        <addForeignKeyConstraint baseTableName="elb_end_fishing_trip"
                                 baseColumnNames="deviceid"
                                 constraintName="elb_end_fishing_trip_tc_devices_id_fk"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="tc_devices"/>

        <addForeignKeyConstraint baseTableName="elb_end_fishing_trip"
                                 baseColumnNames="positionid"
                                 constraintName="elb_end_fishing_trip_tc_positions_id_fk"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="tc_positions"/>

        <createIndex tableName="elb_end_fishing_trip" indexName="elb_end_fishing_trip_deviceid_fixtime_index">
            <column name="id" />
            <column name="deviceid" />
            <column name="fixtime" />
        </createIndex>

    </changeSet>

</databaseChangeLog>
